<p id="notice"><%= notice %></p>

<h1>Lista de Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre de Post</th>
      <th>Orden de Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%if (post.post_number == nil)%>
            Sin Orden.
            <% else %>
            <%= post.post_number %>
            <% end %>
            </td>
        <td><%= link_to 'Ver', post,class: 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_post_path(post),class: 'btn btn-default' %></td>
        <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Seguro que desea eliminar?' },class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Post', new_post_path,class: 'btn btn-default' %>
